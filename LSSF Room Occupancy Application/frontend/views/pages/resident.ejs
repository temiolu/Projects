<%- include('../partials/head')-%>

<html>
  <head>
    <title>Resident</title>
  </head>

  <body>
    <%- include('../partials/header')-%>
    <h3 class="h3tablez">MANAGE RESIDENTS</h3>
    <main>
      <div class="crudmain">
        <div class="api_call">
          <div
            class="card"
            style="width: 18rem">
            <p class="carico">
              <i
                class="fa-regular fa-eye fa-7x"
                style="color: #ff002b"></i>
            </p>
            <div class="card-body">
              <h5 class="card-title">VIEW RESIDENTS</h5>
              <p class="card-text">View all the residents in the facility</p>
              <a
                href="/resident/view"
                class="btn btn-primary"
                >VIEW</a
              >
            </div>
          </div>
        </div>
        <div class="api_call">
          <div
            class="card"
            style="width: 18rem">
            <p class="carico">
              <i
                class="fa-solid fa-plus fa-7x"
                style="color: #ff002b"></i>
            </p>
            <div class="card-body">
              <h5 class="card-title">ADD RESIDENT</h5>
              <p class="card-text">Add residents to the facility</p>
              <a
                href="/resident/add"
                class="btn btn-primary"
                >ADD</a
              >
            </div>
          </div>
        </div>
        <div class="api_call">
          <div
            class="card"
            style="width: 18rem">
            <p class="carico">
              <i
                class="fa-regular fa-pen-to-square fa-7x"
                style="color: #ff002b"></i>
            </p>
            <div class="card-body">
              <h5 class="card-title">UPDATE RESIDENT</h5>
              <p class="card-text">Update resident data in the facility</p>
              <a
                href="/resident/update"
                class="btn btn-primary"
                >UPDATE</a
              >
            </div>
          </div>
        </div>
        <div class="api_call">
          <div
            class="card"
            style="width: 18rem">
            <p class="carico">
              <i
                class="fa-solid fa-trash fa-7x"
                style="color: #ff002b"></i>
            </p>
            <div class="card-body">
              <h5 class="card-title">DELETE RESIDENT</h5>
              <p class="card-text">Delete residents from the facility</p>
              <a
                href="/resident/delete"
                class="btn btn-primary"
                >DELETE</a
              >
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
